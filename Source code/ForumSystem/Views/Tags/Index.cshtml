@model List<ForumSystem.Models.Question>
    @using ForumSystem.Classes
        
@{
    ViewBag.Title = "Index";
}

<h2 class="page-text">All Questions tagged with <i>#@Utiles.Tag</i>  </h2>
@foreach (var question in Model)
{
    <div>
        <h2>@Html.ActionLink(question.Title.ToString(), "Details", "Questions", new { id = question.QuestionId },null)</h2>
        <p class="page-text">Asked by @Html.ActionLink(question.Author.UserName, "ProfileIndex", "Manage",new { id = question.Author.Id},null)</p>
        <p class="page-text">Ranking: @question.Ranking</p>
    </div>
    <hr class="page-line"/>
}

